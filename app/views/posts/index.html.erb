<h1>Posts</h1>
<% if !@posts.empty? %>
	<!-- If posts are available... -->
	<% @posts.each do |post| %>
		<h3><%= link_to post.title, post %></h3>
	<% end %>
<% else %>
	<!-- If no posts are available... -->
	<p>Whoops! It looks like there aren't any posts to display.</p>
<% end %>

<%= link_to 'New Post', new_post_path %>