<div class='card showcard'>
	<div>
		<div class='card-header'>
			<h5><%= @post.title %></h5>
		</div>
		<div class='card-body'>
			<% if @post.photo.attached? %>
				<!-- If post has photo attached... -->
				<%= image_tag @post.photo, class: 'mx-auto d-block rounded',style: 'max-width: 100%; height: 400px' %>
			<% end %>
			<p><%= @post.description %></p>
		</div>
		<div class='card-footer'>
			<%= link_to 'Back', posts_path, class: 'btn btn-link' %>
			<%= link_to 'Edit', edit_post_path, class: 'btn btn-link' %>
			<%= link_to 'Delete', @post, method: :delete, data: {confirm: 'Are you sure you wish to delete this post?'}, class: 'btn btn-link' %>
		</div>
	</div>
</div>