<div class='card'>
	<div class='card-body'>
		<div class='card-title'>
			<h5><%= @post.title %></h5>
		</div>
		<p class='card-text'><%= @post.description %></p>
		<div class='btn-group' role='group'>
			<%= link_to 'Back', posts_path, class: 'btn btn-link card-link' %>
			<%= link_to 'Edit', edit_post_path, class: 'btn btn-link card-link' %>
			<%= link_to 'Delete', @post, method: :delete, data: {confirm: 'Are you sure you wish to delete this post?'}, class: 'btn btn-link card-link' %>
		</div>
	</div>
</div>