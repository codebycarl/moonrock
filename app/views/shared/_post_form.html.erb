<div>
	<%= form_for(@post) do |f| %>
		<div class='form-group'>
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		<div class='form-group'>
			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>
		</div>
		<div class='form-group'>
			<%= f.file_field :photo %>
		</div>
		<%= f.submit :class=> 'btn btn-primary' %>
		<%= link_to 'Cancel', posts_path, class: 'btn btn-link' %>
	<% end %>
</div>